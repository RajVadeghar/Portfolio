---
import Layout from "@/layouts/Layout.astro";
import AppDrawer from "@/assets/uniconnect/app-drawer.png";
import AppDrawerInfo from "@/assets/uniconnect/app-drawer-info.png";
import Confirmation from "@/assets/uniconnect/confirmation.png";
import { Image } from "astro:assets";
---

<style>
  body {
    background-color: #121212;
  }
  .step-number {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    margin-right: 1rem;
    background-color: rgb(191 219 254);
  }
</style>

<Layout>
  <header class="bg-blue-900 py-12 text-white">
    <div class="mx-auto max-w-4xl px-4">
      <h1 class="mb-4 text-4xl font-bold">
        How to Delete Your UniConnect Account
      </h1>
      <p class="text-xl opacity-90">
        A step-by-step guide to removing your account and data
      </p>
    </div>
  </header>

  <!-- Main Content -->
  <main class="mx-auto flex max-w-4xl flex-col px-4 py-8">
    <!-- Important Notice -->
    <div
      class="mb-8 border-l-4 border-yellow-600 bg-yellow-900 bg-opacity-20 p-4"
    >
      <div class="flex">
        <div class="flex-shrink-0">
          <svg
            class="h-5 w-5 text-yellow-500"
            viewBox="0 0 20 20"
            fill="currentColor"
          >
            <path
              fill-rule="evenodd"
              d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z"
              clip-rule="evenodd"></path>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-yellow-500">Important Notice</h3>
          <div class="mt-2 text-sm text-yellow-400">
            <p>
              Account deletion is permanent and cannot be undone. All your data
              will be permanently removed from our servers.
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Steps -->
    <div class="space-y-12">
      <!-- Step 1 -->
      <div class="rounded-lg bg-gray-900 p-6 shadow-lg">
        <div class="flex items-start">
          <div class="step-number bg-blue-900 text-blue-200">1</div>
          <div class="flex-1">
            <h2 class="mb-4 text-xl font-semibold text-blue-200">
              Open the Menu
            </h2>
            <p class="mb-6 text-gray-400">
              Tap the menu icon in the top-left corner of your screen to open
              the navigation drawer.
            </p>
            <div class="w-full overflow-hidden rounded-lg p-10 text-center">
              <Image
                src={AppDrawer}
                alt={"app-drawer"}
                width={260}
                height={150}
                class="mx-auto h-full object-contain transition-transform duration-300 group-hover:scale-110"
              />
            </div>
          </div>
        </div>
      </div>

      <!-- Step 2 -->
      <div class="rounded-lg bg-gray-900 p-6 shadow-lg">
        <div class="flex items-start">
          <div class="step-number bg-blue-900 text-blue-200">2</div>
          <div class="flex-1">
            <h2 class="mb-4 text-xl font-semibold text-blue-200">
              Scroll to Bottom
            </h2>
            <p class="mb-6 text-gray-400">
              Scroll to the bottom of the menu where you'll find the account
              management options.
            </p>
            <div class="w-full overflow-hidden rounded-lg p-10 text-center">
              <Image
                src={AppDrawerInfo}
                alt={"AppDrawerInfo"}
                width={260}
                height={150}
                class="mx-auto h-full object-contain transition-transform duration-300 group-hover:scale-110"
              />
            </div>
          </div>
        </div>
      </div>

      <!-- Step 3 -->
      <div class="rounded-lg bg-gray-900 p-6 shadow-lg">
        <div class="flex items-start">
          <div class="step-number bg-blue-900 text-blue-200">3</div>
          <div class="flex-1">
            <h2 class="mb-4 text-xl font-semibold text-blue-200">
              Tap "Delete Account"
            </h2>
            <p class="mb-6 text-gray-400">
              Look for the "Delete Account" button below the "Sign Out" option
              and tap it.
            </p>
          </div>
        </div>
      </div>

      <!-- Step 4 -->
      <div class="rounded-lg bg-gray-900 p-6 shadow-lg">
        <div class="flex items-start">
          <div class="step-number bg-blue-900 text-blue-200">4</div>
          <div class="flex-1">
            <h2 class="mb-4 text-xl font-semibold text-blue-200">
              Confirm Deletion
            </h2>
            <p class="mb-6 text-gray-400">
              A confirmation dialog will appear. Read the warning message
              carefully and tap "Delete" to permanently remove your account.
            </p>
            <div class="w-full overflow-hidden rounded-lg p-10 text-center">
              <Image
                src={Confirmation}
                alt={"Confirmation"}
                width={260}
                height={150}
                class="mx-auto h-full object-contain transition-transform duration-300 group-hover:scale-110"
              />
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- What happens next -->
    <div class="mt-12 rounded-lg bg-gray-900 p-6 shadow-lg">
      <h2 class="mb-6 text-2xl font-bold text-blue-200">What Happens Next?</h2>
      <div class="space-y-4">
        <div class="flex items-start">
          <svg
            class="mr-3 h-6 w-6 text-green-500"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M5 13l4 4L19 7"></path>
          </svg>
          <p class="text-gray-400">
            Your account and all associated data will be permanently deleted
            from our servers
          </p>
        </div>
        <div class="flex items-start">
          <svg
            class="mr-3 h-6 w-6 text-green-500"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M5 13l4 4L19 7"></path>
          </svg>
          <p class="text-gray-400">You'll be signed out automatically</p>
        </div>
        <div class="flex items-start">
          <svg
            class="mr-3 h-6 w-6 text-green-500"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M5 13l4 4L19 7"></path>
          </svg>
          <p class="text-gray-400">
            You can create a new account at any time using the same email
            address
          </p>
        </div>
      </div>
    </div>

    <!-- Need Help Section -->
    <div class="mt-12 rounded-lg bg-gray-900 p-6 text-center">
      <h2 class="mb-4 text-xl font-semibold text-blue-200">Need Help?</h2>
      <p class="mb-6 text-gray-400">
        If you're having trouble deleting your account or have any questions,
        please contact our support team.
      </p>
      <a
        href="mailto:support@uniconnect.com"
        class="inline-flex items-center justify-center rounded-md border border-transparent bg-blue-600 px-6 py-3 text-base font-medium text-white hover:bg-blue-700"
      >
        Contact Support
      </a>
    </div>
  </main>

  <footer class="mt-12 bg-gray-900 py-8">
    <div class="container mx-auto px-4 text-center text-gray-400">
      <p>&copy; 2024 UniConnect. All rights reserved.</p>
    </div>
  </footer>
</Layout>
