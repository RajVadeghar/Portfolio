---
import ManifoldLogo from "@/assets/manifold_ventures_llc_logo.jpeg";
import Main from "@/components/Main.astro";
import Socials from "@/components/Socials.astro";
import Organization from "@/components/about/Organization.astro";
import Layout from "@/layouts/Layout.astro";
import { Image } from "astro:assets";
---

<Layout
  seo={{
    title: "About R44J"
  }}
>
  <Main className="pt-8 sm:pt-20">
    <div
      class="mx-auto flex w-full max-w-4xl flex-col items-center gap-10 overflow-x-hidden sm:pt-16 md:flex-row md:items-start"
    >
      <div class="flex w-full flex-col gap-5 p-5">
        <div
          class="flex w-full flex-col items-center gap-8 rounded-sm border-white/20 pb-5 max-[640px]:border max-[640px]:p-5 sm:flex-row"
        >
          <Image
            height={200}
            width={200}
            id="profile-img"
            src="/linkedin.jpg"
            alt="raj"
            class="z-10 h-36 w-36 whitespace-nowrap rounded-full sm:h-44 sm:w-44"
          />
          <div
            class="flex w-full flex-col items-center justify-between gap-3 sm:flex-row"
          >
            <div class="flex flex-col gap-3">
              <h1 class="text-3xl font-light text-white">
                Vadeghar Raja Narayana
              </h1>
              <p class="text-xl font-bold">
                <span class="text-accent">Full Stack</span>
                Developer
              </p>
            </div>

            <div
              class="flex w-full flex-col items-start gap-2 font-medium sm:w-fit sm:items-end sm:text-right"
            >
              <div class="flex items-center gap-2">
                <Image src={ManifoldLogo} alt="" class="h-5 w-5" />
                <span> Manifold Ventures</span>
              </div>
              <Socials
                id="about-socials"
                className="flex items-center gap-2 pt-1.5 [&_svg]:h-5 [&_svg]:w-5"
              />
            </div>
          </div>
        </div>

        <div class="border-b border-white/20 py-5">
          Hi there ðŸ‘‹, <strong class="text-white">I'm Raj</strong><br />
          <strong class="text-white">
            Full-stack web dev with 1.5 years at a US startup.
          </strong>
          Skilled in React, Next.js, Tailwind, Chrome extensions & SEO. I Build engaging
          & scalable web apps. Looking to bring your vision to life? Let's connect
        </div>

        <div class="flex flex-col gap-5 py-5">
          <h2 class="pb-5 text-3xl font-medium text-accent">Work</h2>

          <Organization
            title="Manifold Ventures"
            span="2022 - Working"
            jobType="Full Time"
            link="https://www.meavana.com"
          >
            <p>
              Manifold Ventures has established MeaVana as its dedicated branch
              for developing Chrome extensions.<br />Since it's a startup. We
              pretty much handle most of the things on our own.
            </p>

            <ul class="list-inside list-disc">
              <li>Landing Page - NEXT JS</li>
              <li>Chrome Extensions - REACT JS</li>
              <li>Figma Designs</li>
              <li>Search Engine Optimization</li>
              <li>and more...</li>
            </ul>
          </Organization>

          <Organization
            title="Kairos Club"
            span="2023"
            jobType="Freelance"
            link="https://kairos-club.com"
          >
            <p>Kairos Club is a e-commerce marketing agency</p>
          </Organization>

          <Organization
            title="Advaita Exports"
            span="2023"
            jobType="Freelance"
            link="https://advaitaexport.com/"
          >
            <p>
              Advaita Export, takes immense pride in dealing with a wide range
              of products, including Cotton Bales, Cotton Yarn, Pulses, Spices,
              Agri Produce, and Rice, catering to the diverse needs of our
              valued clientele.
            </p>
          </Organization>
        </div>
      </div>
    </div>
  </Main>
</Layout>
