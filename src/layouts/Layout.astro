---
interface Props {
  title: string;
  description?: string;
  className?: string;
  keywords?: string | undefined;
}

import Footer from "@/components/layout/Footer.astro";
import Header from "@/components/layout/Header.astro";
import GoogleAnalytics from "@/components/google-analytics.astro";
import SpeedInsights from "@vercel/speed-insights/astro";
import { ViewTransitions } from "astro:transitions";
const { title, description, className, keywords } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Full Stack Developer" />
    <link rel="icon" type="image/png" href="/icon-256x256.png" />
    <meta name="generator" content={Astro.generator} />
    {keywords && <meta name="keywords" content={keywords} />}
    <ViewTransitions />
    <title>{title}</title>
    <meta
      name="description"
      content={description ??
        "R44J, a Full Stack Developer skilled in Figma designs, scalable architectures, backend and frontend development, SEO, chrome extensions, and e-commerce. Explore my diverse expertise and collaborations in IOS apps, mobile apps, and PWAs."}
    />
    <meta
      name="keywords"
      content="R44J, Full Stack Developer, Figma designs, Scalable Architectures, Backend Development, Frontend Development, SEO, Chrome Extensions, E-commerce, IOS Apps, Mobile Apps, PWA"
    />

    <meta
      property="og:title"
      content="R44J | Full Stack Developer - Portfolio"
    />
    <meta
      property="og:description"
      content="Explore R44J's skills in Figma designs, scalable architectures, frontend and backend development, SEO, and more. Specializing in Chrome extensions, e-commerce, and collaborating on IOS apps, mobile apps, and PWAs."
    />

    <meta
      name="twitter:title"
      content="R44J | Full Stack Developer - Portfolio"
    />
    <meta
      name="twitter:description"
      content="Discover R44J's expertise in Figma designs, scalable architectures, frontend and backend development, SEO, and more. Specializing in Chrome extensions, e-commerce, and collaborating on IOS apps, mobile apps, and PWAs."
    />

    <link rel="sitemap" href="/sitemap-index.xml" />

    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
    </script>

    <GoogleAnalytics />

    <script is:inline>
      (function (w, d, s, l, i) {
        w[l] = w[l] || [];
        w[l].push({ "gtm.start": new Date().getTime(), event: "gtm.js" });
        var f = d.getElementsByTagName(s)[0],
          j = d.createElement(s),
          dl = l != "dataLayer" ? "&l=" + l : "";
        j.async = true;
        j.src = "https://www.googletagmanager.com/gtm.js?id=" + i + dl;
        f.parentNode.insertBefore(j, f);
      })(window, document, "script", "dataLayer", "GTM-T3FDZDQ2");
    </script>
  </head>
  <body class={`relative ${className ?? "bg-black text-white/60"} antialiased`}>
    <Header />
    <slot />
    <Footer />
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Noto+Sans+Mono&display=swap");
      @import url("https://fonts.googleapis.com/css2?family=Rubik+Glitch&display=swap");
      @import url("https://fonts.googleapis.com/css2?family=Audiowide&display=swap");
      @import url("https://fonts.googleapis.com/css2?family=Syncopate:wght@700&display=swap");

      *,
      *::after,
      *::before {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      :root {
        --color-accent-2: 108, 99, 255;
        --color-fill: 33, 39, 55;
        --color-accent: 255, 121, 1;
        --color-card: 52, 63, 96;
        --color-card-muted: 138, 51, 2;
        --color-border: 171, 75, 8;
      }

      html {
        overflow-x: hidden;
        scroll-behavior: smooth;
        font-family: system-ui, sans-serif;
        -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
      }
    </style>
    <SpeedInsights />

    <noscript
      ><iframe
        src="https://www.googletagmanager.com/ns.html?id=GTM-T3FDZDQ2"
        height="0"
        width="0"
        style="display:none;visibility:hidden"></iframe></noscript
    >
  </body>
</html>
